<Window x:Class="QRiskTreeEditor.SecondaryWindows.About"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="About QRiskTree Editor"
        Height="460" Width="600"
        WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize"
        Icon="pack://application:,,,/Resources/Logo.ico">

    <Grid Margin="20">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <!-- Header -->
        <StackPanel Grid.Row="0" Orientation="Horizontal" Margin="0 0 0 20">
            <Image Source="pack://application:,,,/Resources/Logo.png" Width="128" Height="128" Margin="0 0 10 0" Stretch="Fill"/>
            <StackPanel>
                <TextBlock Text="QRiskTree Editor" FontSize="24" FontWeight="Bold"/>
                <TextBlock Text="Bridging Security and Business Decisions" FontSize="14" FontStyle="Italic"/>
                <TextBlock Text="Version 0.1.0" FontSize="16" FontWeight="SemiBold" Margin="0 5"/>
                <TextBlock Text="Developed by Simone Curzi" FontSize="14" Margin="0 5"/>
                <TextBlock>
                <Hyperlink NavigateUri="https://github.com/simonec73/QRiskTree/blob/main/LICENSE" RequestNavigate="Hyperlink_RequestNavigate">
                    Freely available under the MIT License
                </Hyperlink>
                </TextBlock>
            </StackPanel>
        </StackPanel>

        <!-- Body -->
        <StackPanel Grid.Row="1" Margin="0 0 0 20">
            <TextBlock TextWrapping="Wrap" Margin="0 10">
                QRiskTree Editor helps organizations determine when security is enough and which mitigations offer the best return on investment. It has been designed to support data-driven decisions by combining threat modeling with quantitative risk analysis. It can be applied to many more contexts, such as risk management and compliance.
            </TextBlock>
            <TextBlock>
                <Hyperlink NavigateUri="https://github.com/simonec73/QRiskTree" RequestNavigate="Hyperlink_RequestNavigate">
                    Visit project website on GitHub
                </Hyperlink>
            </TextBlock>
            <TextBlock/>
            <TextBlock TextWrapping="Wrap" FontSize="10" Margin="0 5">
                Supports Open Threat Model format, which is owned by IriusRisk and distributed under CC BY-SA 4.0
                (<Hyperlink NavigateUri="https://github.com/iriusrisk/OpenThreatModel" RequestNavigate="Hyperlink_RequestNavigate">
                    see on GitHub
                </Hyperlink>).
            </TextBlock>
            <TextBlock TextWrapping="Wrap" FontSize="10" Margin="0 0">
                QRiskTree Editor is not a derivative work from the Open Threat Model specification, as it implements the standard and does not incorporate or alter any material provided under such repository.
                As such, it is not subject to the terms of the Open Threat Model specification.
            </TextBlock>
        </StackPanel>

        <!-- Footer -->
        <Button Grid.Row="2" Content="Close" Width="100" Height="30" HorizontalAlignment="Right" Click="Close_Click"/>
    </Grid>
</Window>
